                        .actions 
                            span.icon
                                i.fa.fa-pencil 
                            span.icon    
                                i.fa.fa-trash
                li.application-item
                    .item-body
                        a(href='application').title Application B
                        .risk
                            .number.red-text 30
                            .desc Vulnerabilities
                        .score
