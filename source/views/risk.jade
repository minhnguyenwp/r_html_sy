extends layouts/layout

block breadcrumb
    .breadcrumb-body
        ul.breadcrumb
            li.breadcrumb-item
                a(href='') Risk Porfolio

block content
    div.main-content
        .page.risk-page
            button(type="button").btn.btn-primary.float-right
                i.fa.fa-plus &nbsp;&nbsp;Create Application
                
            ul.applications
                li.application-item
                    .item-body
                        a(href='application').title Application A
                        .risk
                            .number.red-text 206
